<%= render 'books/user' %>

		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg" %>
							<br><%= link_to @user.name, user_path(@book.user.id) %>
						</td>
						<td><%= @book.title %></td>
						<td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-success" %>
            <% end %>
            <% if @user.id == current_user.id%>
              <td>
                <%= link_to 'Destroy', book_path(@book), class: "btn btn-danger", method: :delete, data: { confirm: '本当に削除しますか？' } %>
              </td>
            <% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>