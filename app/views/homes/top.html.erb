<div class="container top">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>welcome to
        <span class="glyphicon glyphicon-book"><strong>Bookers</strong>
          !!</span>
      </h1>
      <p>In<span class="glyphicon glyphicon-book"></span><strong>Bookers</strong>,</p>
      <p>you can share and exchange your opinions , inpressions , and emotions</p>
      <p> about various books!</p>
      <div class="btn-wrapper">
        <div class="row">
          <% if user_signed_in? %>
            <%= link_to 'Log in', user_path(current_user.id), class: "btn btn-info col-xs-10 col-xs-offset-1 sing_in" %>
          <% else %>
            <%= link_to 'Log in', new_user_session_path, class: "btn btn-info col-xs-10 col-xs-offset-1 sing_in" %>
          <% end %>
        </div>
        <div class="row">
          <% if user_signed_in? %>
            <%= link_to 'Sign Up', user_path(current_user.id), class: "btn btn-success col-xs-10 col-xs-offset-1 sign_up" %>
          <% else %>
            <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-success col-xs-10 col-xs-offset-1 sign_up" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
